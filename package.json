{
  "name": "challenge_spaceguru",
  "version": "1.0.0",
  "description": "Framework de pruebas Cypress con Allure en Chrome y Edge",
  "main": "index.js",
  "scripts": {
    "test:chrome": "cypress run --browser chrome",
    "test:edge": "cypress run --browser edge",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "run:all": "npm run test:chrome & npm run test:edge & npm run allure:generate & npm run allure:open"
  },
  "keywords": [
    "cypress",
    "qa",
    "automation",
    "allure"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.36.0",
    "cypress": "^15.9.0",
    "dotenv": "^17.2.3",
    "npm-run-all": "^4.1.5"
  }
}
